/* pages/detail/detail.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
}

/* 顶部大图 */
.hero {
  height: 400rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
}

.hero-overlay {
  text-align: center;
  position: relative;
  z-index: 1;
}

.hero-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  margin-bottom: 12rpx;
}

.hero-type {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 24rpx;
}

.hero-desc {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
  line-height: 1.6;
}

/* 快捷信息 */
.quick-info {
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding: 32rpx;
  margin: -48rpx 32rpx 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 12rpx;
}

.info-text {
  font-size: 24rpx;
  color: #6b7280;
}

/* 物种展示区 */
.species-section {
  margin: 0 32rpx 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.section-badge {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #e0e7ff 0%, #ddd6fe 100%);
  color: #6366f1;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.species-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.species-card {
  background: linear-gradient(135deg, #f9fafb 0%, #ffffff 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  text-align: center;
  position: relative;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.species-card:active {
  transform: scale(0.95);
}

.species-captured {
  background: linear-gradient(135deg, #e0e7ff 0%, #ddd6fe 100%);
  border-color: #6366f1;
}

.species-card-emoji {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.species-card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.species-card-type {
  font-size: 22rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 12rpx;
}

.species-card-reward {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 500;
  display: block;
}

.captured-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background: #10b981;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.captured-icon {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

/* 公告 */
.announcement {
  margin: 0 32rpx 24rpx;
}

.announcement-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.announcement-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.announcement-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.announcement-text {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
}

/* 服务项目 */
.services {
  margin: 0 32rpx 24rpx;
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  margin-top: 24rpx;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.service-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.service-name {
  font-size: 24rpx;
  color: #6b7280;
  text-align: center;
}

.service-disabled {
  opacity: 0.4;
}

/* 邻里好货 */
.deals {
  margin: 0 32rpx 24rpx;
}

.deals-scroll {
  margin-top: 24rpx;
  white-space: nowrap;
}

.deals-list {
  display: inline-flex;
  gap: 16rpx;
}

.deal-card {
  display: inline-block;
  width: 240rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fed7aa 100%);
  border-radius: 16rpx;
}

.deal-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #1f2937;
  display: block;
  margin-bottom: 12rpx;
  white-space: normal;
}

.deal-price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.deal-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #dc2626;
  margin-right: 12rpx;
}

.deal-original {
  font-size: 24rpx;
  color: #9ca3af;
  text-decoration: line-through;
}

.deal-sales {
  font-size: 22rpx;
  color: #6b7280;
}

/* 推荐路线 */
.routes {
  margin: 0 32rpx 24rpx;
}

.route-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f3f4f6;
}

.route-item:last-child {
  border-bottom: none;
}

.route-info {
  flex: 1;
}

.route-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.route-meta {
  font-size: 24rpx;
  color: #9ca3af;
}

.route-arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 评价 */
.reviews {
  margin: 0 32rpx 24rpx;
}

.reviews-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.reviews-rating {
  display: flex;
  align-items: baseline;
}

.rating-score {
  font-size: 36rpx;
  font-weight: 700;
  color: #f59e0b;
  margin-right: 8rpx;
}

.rating-count {
  font-size: 24rpx;
  color: #9ca3af;
}

.reviews-tip {
  font-size: 26rpx;
  color: #9ca3af;
  text-align: center;
  padding: 48rpx 0;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 32rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.bottom-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  border: none;
  font-size: 24rpx;
  color: #6b7280;
}

.action-btn::after {
  border: none;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #6b7280;
}

.action-btn-primary {
  flex: 2;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  flex-direction: row;
}

.action-text-primary {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
}

/* 物种弹窗 */
.species-popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 64rpx;
}

.species-popup {
  width: 100%;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
}

.popup-header {
  padding: 48rpx;
  text-align: center;
}

.popup-emoji {
  font-size: 120rpx;
  display: block;
  margin-bottom: 16rpx;
}

.popup-type {
  font-size: 24rpx;
  color: #6b7280;
}

.popup-body {
  padding: 32rpx 48rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  margin-bottom: 16rpx;
  text-align: center;
}

.popup-desc {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.6;
  display: block;
  margin-bottom: 32rpx;
  text-align: center;
}

.popup-info {
  display: flex;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.popup-info-item {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
}

.popup-info-label {
  font-size: 24rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 8rpx;
}

.popup-info-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #6366f1;
}

.popup-tips {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: #fef3c7;
  border-radius: 16rpx;
}

.tips-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.tips-text {
  font-size: 24rpx;
  color: #92400e;
  line-height: 1.6;
}

.popup-actions {
  display: flex;
  gap: 16rpx;
  padding: 32rpx 48rpx 48rpx;
}

.popup-actions button {
  flex: 1;
}

/* 捕获成功动画 */
.capture-animation {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.capture-content {
  text-align: center;
}

.capture-emoji {
  font-size: 200rpx;
  display: block;
  margin-bottom: 32rpx;
  animation: bounce 0.6s ease-in-out;
}

@keyframes bounce {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
  }
}

.capture-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  display: block;
  margin-bottom: 16rpx;
}

.capture-reward {
  font-size: 36rpx;
  color: #fbbf24;
  font-weight: 600;
}
