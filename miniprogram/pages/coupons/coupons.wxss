/* pages/coupons/coupons.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
}

/* 顶部统计 */
.stats-header {
  display: flex;
  justify-content: space-around;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 48rpx 32rpx;
}

.stats-card {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Tab切换 */
.tabs {
  display: flex;
  background: #fff;
  padding: 0 32rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #6b7280;
  position: relative;
}

.tab-item-active {
  color: #6366f1;
  font-weight: 600;
}

.tab-item-active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

.tab-badge {
  position: absolute;
  top: 20rpx;
  right: 20%;
  background: #ef4444;
  color: #fff;
  border-radius: 24rpx;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 卡券列表 */
.coupon-list {
  height: calc(100vh - 280rpx);
  padding: 24rpx 32rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.coupon-card {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.coupon-card.used,
.coupon-card.expired {
  opacity: 0.6;
}

.coupon-left {
  width: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx 24rpx;
  position: relative;
}

.coupon-left::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 80%;
  background: repeating-linear-gradient(
    to bottom,
    #e5e7eb 0,
    #e5e7eb 8rpx,
    transparent 8rpx,
    transparent 16rpx
  );
}

.coupon-emoji {
  font-size: 72rpx;
  margin-bottom: 12rpx;
}

.coupon-type {
  font-size: 22rpx;
  color: #9ca3af;
}

.coupon-center {
  flex: 1;
  padding: 28rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.coupon-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
  display: block;
}

.coupon-desc {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
  display: block;
}

.coupon-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.meta-shop {
  font-size: 22rpx;
  color: #9ca3af;
  padding: 6rpx 12rpx;
  background: #f3f4f6;
  border-radius: 6rpx;
}

.meta-expire {
  font-size: 22rpx;
  color: #f59e0b;
}

.coupon-right {
  width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 28rpx 16rpx;
}

.coupon-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #dc2626;
  margin-bottom: 16rpx;
  text-align: center;
}

.use-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-text {
  font-size: 24rpx;
  color: #9ca3af;
}

.coupon-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.5);
  pointer-events: none;
}

/* 详情弹窗 */
.detail-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: flex-end;
}

.detail-panel {
  width: 100%;
  max-height: 90vh;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  overflow: hidden;
}

.detail-header {
  padding: 48rpx;
  text-align: center;
}

.detail-emoji {
  font-size: 120rpx;
  display: block;
  margin-bottom: 16rpx;
}

.detail-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.detail-type {
  font-size: 24rpx;
  color: #6b7280;
}

.detail-body {
  padding: 32rpx 48rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 32rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 8rpx;
}

.detail-value-big {
  font-size: 56rpx;
  font-weight: 700;
  color: #dc2626;
  display: block;
  margin-bottom: 12rpx;
}

.detail-desc {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.6;
}

.detail-text {
  font-size: 28rpx;
  color: #1f2937;
  line-height: 1.6;
  white-space: pre-line;
}

.qr-section {
  text-align: center;
  margin-top: 48rpx;
}

.qr-code {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto 24rpx;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qr-placeholder {
  font-size: 48rpx;
  font-weight: 700;
  color: #1f2937;
  font-family: 'Courier New', monospace;
  letter-spacing: 4rpx;
}

.qr-tip {
  font-size: 24rpx;
  color: #9ca3af;
}

.detail-actions {
  display: flex;
  gap: 16rpx;
  padding: 32rpx 48rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.detail-actions button {
  flex: 1;
}
