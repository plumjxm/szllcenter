/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
}

/* 用户信息卡片 */
.profile-card {
  margin: 32rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.profile-header {
  padding: 48rpx 32rpx 32rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-btn {
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 48rpx;
  font-size: 28rpx;
}

.login-btn::after {
  border: none;
}

/* 好运值区域 */
.lucky-section {
  padding: 32rpx;
}

.lucky-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fed7aa 100%);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
}

.lucky-icon {
  font-size: 80rpx;
  margin-right: 24rpx;
}

.lucky-info {
  display: flex;
  flex-direction: column;
}

.lucky-value {
  font-size: 56rpx;
  font-weight: 700;
  color: #92400e;
  line-height: 1;
  margin-bottom: 8rpx;
}

.lucky-label {
  font-size: 24rpx;
  color: #92400e;
  opacity: 0.8;
}

.stats-row {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 菜单部分 */
.menu-section {
  margin: 0 32rpx 24rpx;
}

.section-title {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
  display: block;
}

.menu-list {
  padding: 0;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.menu-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.menu-name {
  font-size: 30rpx;
  color: #1f2937;
}

.menu-right {
  display: flex;
  align-items: center;
}

.menu-badge {
  padding: 6rpx 16rpx;
  background: #ef4444;
  color: #fff;
  border-radius: 24rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
  min-width: 32rpx;
  text-align: center;
}

.menu-arrow {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.4;
}

/* 本周数据 */
.stats-section {
  margin: 0 32rpx 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 32rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #f9fafb 0%, #ffffff 100%);
  border-radius: 16rpx;
}

.stats-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.stats-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 退出登录 */
.logout-section {
  margin: 48rpx 32rpx 24rpx;
}

.logout-btn {
  width: 100%;
  padding: 28rpx;
  background: #fff;
  color: #ef4444;
  border: 2rpx solid #f3f4f6;
  border-radius: 16rpx;
  font-size: 30rpx;
}

.logout-btn::after {
  border: none;
}
