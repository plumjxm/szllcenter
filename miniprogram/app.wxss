/**app.wxss**/
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

.container {
  min-height: 100vh;
  padding: 0;
}

/* 通用样式 */
.safe-area {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-secondary {
  background: #f3f4f6;
  color: #374151;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 渐变背景 */
.gradient-bg {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.gradient-amber {
  background: linear-gradient(135deg, #fef3c7 0%, #fed7aa 100%);
}

.gradient-blue {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
}

.gradient-pink {
  background: linear-gradient(135deg, #fce7f3 0%, #fbcfe8 100%);
}

.gradient-green {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
}

.gradient-purple {
  background: linear-gradient(135deg, #ede9fe 0%, #ddd6fe 100%);
}

/* 文字样式 */
.text-primary {
  color: #6366f1;
}

.text-secondary {
  color: #6b7280;
}

.text-muted {
  color: #9ca3af;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #f3f4f6;
  color: #6b7280;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.tag-primary {
  background: #e0e7ff;
  color: #6366f1;
}

/* 徽章 */
.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ef4444;
  color: #fff;
  border-radius: 24rpx;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background: #f3f4f6;
  margin: 24rpx 0;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 48rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  color: #9ca3af;
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  padding: 60rpx;
  text-align: center;
  color: #9ca3af;
}

/* 动画 */
.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.scale-in {
  animation: scaleIn 0.3s ease-out;
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}
